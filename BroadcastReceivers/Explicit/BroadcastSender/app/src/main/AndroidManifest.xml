<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.broadcastsender">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


<!--      ************************************* When sender and receiver are in the same app and if not using the action ************************************** -->


<!--      It does the work both of the sender and receiver. Since also a receiver ( and a static ) so we need to add a receiver name here   -->

<!--     Though we mentioned the receiver name in the AndroidManifest.xml file but it's not an implicit. In the static broadcast receiver ( it is explicit-static one )
           we need to mention the receiver name -->
<!--        <receiver android:name=".ExplicitBroadcastReceiver" />-->


<!--    ******************************************************************************************************************************************************** -->



    </application>

</manifest>